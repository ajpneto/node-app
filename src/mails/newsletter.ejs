            text-align: center;
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 20px;
        }
        .footer {
            background-color: #708090;
            color: #FFF;
            padding: 20px;
            border-radius: 0 0 10px 10px;
            text-align: center;
            font-size: 14px;
            font-weight: bold;
            margin-top: 20px;
        }
        h2 {
            color: #333;
            font-size: 20px;
            margin: 0;
        }
        p {
            color: #666;
            text-align: justify;
        }
        .wrapper {
            font-size: 16px;
            margin-bottom: 20px;
        }

  @media screen and (max-width: 600px) {
    .container {
        width: 100% !important;
        display: block !important;
        padding: 2px !important;
