<script>

$('.data').on('click', 'a', function() {
    var url = $(this).attr('id');
console.log(url);
    var item_id = $('#modal2 a').attr('id');

    if(item_id === 'item_id'){
        $('#item_id').html('Adicionar ao <i class="fa fa-shopping-cart"></i>');
    };

    $.getJSON(url, function(data) {
        $('#author').html(data.author);
        $('#publish_date').html(data.publish_date);
        $('#title').html(data.title);
        $('#description').html(data.description);
        $('.card img').attr('src', data.image);
        $('#modal2 a').attr('href', '/books/' + data.key);

    });

});


</script>
